    "@types/react": "^18.2.17",
    "@types/uuid": "^9.0.2",
    "babel-jest": "^29.6.2",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "metro-react-native-babel-preset": "0.76.7",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.1.6"
  }
