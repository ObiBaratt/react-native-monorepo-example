{
  "name": "@crutchcorn/react-native-chat-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "build:android:release": "npm run build:android:release:apk",
    "build:android:debug": "npm run build:android:debug:apk",
    "build:android:release:apk": "cd android && ./gradlew assembleRelease",
    "build:android:debug:apk": "cd android && ./gradlew assembleDebug",
    "build:android:release:aab": "cd android && ./gradlew bundleRelease",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --resolve-plugins-relative-to ../..",
    "format": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix --resolve-plugins-relative-to ../..",
    "test": "jest",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@crutchcorn/shared-elements": "workspace:*",
    "@react-native-async-storage/async-storage": "^1.17.10",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/native-stack": "^6.9.1",
    "@tanstack/react-query": "^4.10.3",
    "dayjs": "^1.11.5",
    "react": "18.1.0",
    "react-native": "0.70.3",
    "react-native-get-random-values": "^1.8.0",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-screens": "^3.18.1",
    "react-native-vector-icons": "^9.2.0",
    "styled-components": "^5.3.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@crutchcorn/config": "workspace:*",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.4",
    "@types/uuid": "^8.3.4",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "0.72.3",
    "react-test-renderer": "18.1.0",
    "typescript": "^4.8.4"
  }
}
